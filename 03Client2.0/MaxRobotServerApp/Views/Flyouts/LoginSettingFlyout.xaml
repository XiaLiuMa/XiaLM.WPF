<mcc:CBaseFlyout  x:Class="MaxRobotServerApp.Views.Flyouts.LoginSettingFlyout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mcc="clr-namespace:MyCustomControl;assembly=MyCustomControl"
        xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"    
        xmlns:maxRobotServerApp="clr-namespace:MaxRobotServerApp"
        Height="208" Width="480" Title="登陆配置">
    <Grid Margin="5">
        <StackPanel Margin="50,5,20,5">
            <StackPanel Orientation="Horizontal" Margin="25,5">
                <Label Content="IP" MinWidth="100" FontSize="16" Style="{StaticResource dLabel}"/>
                <TextBox x:Name="loginIP" FontSize="16" MinWidth="180" Style="{StaticResource dTextBox}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="25,5">
                <Label Content="PORT" MinWidth="100" FontSize="16" Style="{StaticResource dLabel}"/>
                <TextBox x:Name="loginPORT" FontSize="16" MinWidth="180" Style="{StaticResource dTextBox}"/>
            </StackPanel>
            <Button Content="保存" Width="60" Margin="0,20" Style="{StaticResource dButton}"/>
        </StackPanel>
    </Grid>
</mcc:CBaseFlyout>
